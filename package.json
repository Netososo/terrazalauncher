{
  "name": "terrazalauncher",
  "version": "2.2.1",
  "description": "Terraza Launcher para macOS",
  "main": "index.js",
  "author": "Tu Nombre <tuemail@ejemplo.com>",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:mac": "electron-builder build -m --publish never"
  },
  "build": {
    "appId": "com.terraza.launcher",
    "productName": "Terraza Launcher",
    "copyright": "Copyright Â© 2025 Tu Nombre",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "dmg": {
      "background": "build/background.png",
      "icon": "build/icon.icns",
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "files": [
      "src/**/*",
      "package.json"
    ]
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  }
}
